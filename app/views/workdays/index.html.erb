<!-- workdays/index.html.erb -->
<h1>勤務日・勤務時間一覧</h1>

<%= link_to "勤務日を追加", new_workday_path %>
<table>
  <thead>
    <tr>
      <th><%= sortable "casts.family_name", "キャスト名" %></th>
      <th><%= sortable "date", "日付" %></th>
      <th><%= sortable "start_time", "開始時間" %></th>
      <th><%= sortable "end_time", "終了時間" %></th>
      <th>休憩時間</th> <!-- 休憩時間の列を追加 -->
    </tr>
  </thead>
  <tbody>
    <% @workdays.each do |workday| %>
      <tr>
        <td><%= link_to workday.cast.full_name, cast_date_schedules_path(cast_id: workday.cast_id, date: workday.date) %></td>
        <td><%= workday.date.strftime("%Y-%m-%d") %></td>
        <td><%= workday.start_time.strftime("%H:%M") %></td> 
        <td><%= workday.end_time.strftime("%H:%M") %></td> 
        <td><%= workday.break_time %> 分</td> <!-- ここで休憩時間を表示 -->
        <td>
          <%= link_to '編集', edit_workday_path(workday) %>
          <%= link_to '削除', workday, data: { turbo_method: :delete, confirm: '本当に削除しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>