<h1>新しいスケジュールの作成</h1>

<%= form_with(model: @workday, local: true) do |form| %>
  <% if @workday.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@workday.errors.count, "error") %>が発生しました:</h2>
      <ul>
      <% @workday.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <%= form.label :cast_id %>
  <%= form.select :cast_id, @casts, { include_blank: true } %>
</div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.time_field :start_time %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.time_field :end_time %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>