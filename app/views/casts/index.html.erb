<div class="casts-index">
  <div class="cast-index-title">キャスト一覧</div>
  <div class="casts-index-casts">
    <table >
        <tr>
          <th>名前</th>
          <th>皿仕分け</th>
          <th>皿流し</th>
          <th>皿拭き</th>
          <th>器具洗い</th>
          <th>器具流し</th>
          <th>器具フキ</th>
          <th>シルバーフキ</th>
        </tr>
         <% @casts.each do |cast| %>
        <tr>
          <td><%= link_to cast.family_name + cast.first_name, edit_cast_path(cast) %></td>
          <td><%= cast.sara_shiwake_skill.name %></td> 
          <td><%= cast.sara_nagashi_skill.name %></td>
          <td><%= cast.sara_huki_skill.name %></td>
          <td><%= cast.kigu_arai_skill.name %></td>
          <td><%= cast.kigu_nagashi_skill.name %></td>
          <td><%= cast.kigu_huki_skill.name %></td>
          <td><%= cast.silver_migaki_skill.name %></td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="cast-on">
    <a href="<%= new_cast_registration_path %>" >キャストを追加する</a>
  </div>
</div>




