<%= javascript_pack_tag 'image_preview' %>

<div class="edit-main">
  <div class="edit-box">
    <div class="edit-title-name">
      <div class="edit-title">
        <h2>アカウント情報の編集</h2>
      </div>
      <div class="edit-user-name">
      <%= current_cast.family_name %> <%= current_cast.first_name %>
      </div>
    </div>
    <div class="edit-title-photo">
      <div class="edit-image"id="image-preview"></div>
    </div>

    <div class="edit-forms">
      <div class="edit-form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="edit-photo">
            <%= f.label :image, "写真" %> <i>(変更しない場合は空欄のままにしてください)</i><br />
            <%= f.file_field :image, id: "image-input" %>
          </div>

          <div class="edit-email-pass">
            <div class="edit-font">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="edit-font">
              <%= f.label :current_password, "現在のパスワード" %><br>
              <%= f.password_field :current_password, autocomplete: "current-password" %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="edit-new-password">
            <div class="edit-font">
              <%= f.label :password, "新しいパスワード" %>
              <%= f.password_field :password, autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <br />
                <em>(最低<%= @minimum_password_length %>文字必要)</em>
              <% end %>
            </div>

            <div class="edit-font">
              <%= f.label :password_confirmation,"新しいパスワード（確認）" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>
          <div class="edit-action">
            <%= f.submit "更新" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

